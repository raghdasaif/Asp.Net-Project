<script>
        function signUpValidator() {

            var email = document.getElementById("<%=textBox1.ClientID%>").value;
            var password1 = document.getElementById("<%=textBox2.ClientID%>").value;
            var password2 = document.getElementById("<%=textBox3.ClientID%>").value;

            // for empty fields
            if (email == "" || password1 == ""
                || password2 == "") {
                alert("Please fill all fields");
                return false;
            }

            // validating email
            emailVal = /^([a-zA-Z0-9_\.\-])+\@(([a-zA-Z0-9\-])+\.)+([com\co\.\in])+$/;
            if (!email.match(emailVal)) {
                alert('Email Address not valid');
                return false;
            }

            // validating password
            if (password1.length < 8) {
                alert("Password must be at least 8 characters long");
                return false;
            }
            if (password1 != password2) {
                alert("Passwords don't match");
                return false;
            }
            return true;
        }
    </script>
